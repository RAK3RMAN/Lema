<% include ../partials/head.ejs %>
<% include ../partials/wrapper-top.ejs %>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header card-header-tabs card-header-success">
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <span class="nav-tabs-title p-0">
                                    <h4 class="card-title"><strong>Active Nodes</strong></h4>
                                    <p class="card-category">Number of Active Nodes: <strong><span
                                                    id="activeCount"></span></strong></p>
                                </span>
                                <ul class="nav nav-tabs justify-content-end" data-tabs="tabs">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link active" onclick="nodeList()">
                                            <i class="fas fa-sync-alt"></i>
                                            <div class="ripple-container"></div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover dt-responsive display nowrap" id="activeTable" style="width: 100%">
                                <thead class="text-success">
                                <th>Node Name</th>
                                <th>IP Address</th>
                                <th>Node ID</th>
                                <th>Tools</th>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="card">
                    <div class="card-header card-header-tabs card-header-warning">
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <span class="nav-tabs-title p-0">
                                    <h4 class="card-title"><strong>Nodes Awaiting Implementation on Network</strong></h4>
                                    <p class="card-category"><strong>Scan IP Range: </strong><span
                                                id="startRangeSent"></span> - <span id="endRangeSent"></span></p>
                                </span>
                                <ul class="nav nav-tabs justify-content-end" data-tabs="tabs">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link active" href="#" id="nodepenDropdown" data-toggle="dropdown"
                                           aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-bars"></i>
                                            <div class="ripple-container"></div>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right"
                                             aria-labelledby="nodepenDropdown">
                                            <div style="min-width: 18em;" class="row pr-3 pl-3">
                                                <div class="col-5 pr-0">
                                                    <div class="form-group bmd-form-group">
                                                        <input type="text" class="form-control" id="startRange"
                                                               placeholder="127.0.0.1">
                                                        <span class="bmd-help">Start Range</span>
                                                    </div>
                                                </div>
                                                <div class="col-2 p-0">
                                                    <div class="form-group bmd-form-group">
                                                        <input type="text" disabled class="form-control"
                                                               placeholder="to">
                                                    </div>
                                                </div>
                                                <div class="col-5 pl-0">
                                                    <div class="form-group bmd-form-group">
                                                        <input type="text" class="form-control" id="endRange"
                                                               placeholder="127.0.0.1">
                                                        <span class="bmd-help">End Range</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <a class="dropdown-item justify-content-center" onclick="nodeSetRange()"
                                               href="#"><i class="material-icons">settings_ethernet</i> Set Network
                                                Range</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item justify-content-center" onclick="nodeAddSA()"
                                               href="#"><i class="material-icons">library_add</i> Manually Add Node</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover dt-responsive display nowrap" id="pendingTable" style="width: 100%">
                                <thead class="text-warning">
                                <th>Hostname/IP</th>
                                <th>Node ID</th>
                                <th>Acquisition Date</th>
                                <th>Tools</th>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div id="hiddenDiv" class="col-12" style="display: none">
                <div class="card">
                    <div class="card-header card-header-tabs card-header-primary">
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <span class="nav-tabs-title p-0">
                                    <h4 class="card-title"><strong>Hidden Nodes</strong></h4>
                                    <p class="card-category">Number of Hidden Nodes: <strong><span id="hiddenCount">3</span></strong></p>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover dt-responsive display nowrap" id="hiddenTable" style="width: 100%">
                                <thead class="text-muted">
                                <th>Hostname/IP</th>
                                <th>Node ID</th>
                                <th>Acquisition Date</th>
                                <th>Tools</th>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 text-center" id="hiddenButton">
                <button class="btn btn-muted btn-round" onclick="toggleHidden()"><i class="far fa-eye"></i> Show Hidden
                    Nodes
                    <div class="ripple-container"></div>
                </button>
            </div>
        </div>
    </div>
</div>
<% include ../partials/wrapper-bottom.ejs %>
<% include ../partials/footer.ejs %>
<script type="text/javascript" src="/static/js/lema-js/nodeFunct.js"></script>
<script type="text/javascript" src="/static/js/lema-js/wrapperJS.js"></script>
<script>
    document.ready = function () {
        themeHandler('<%= user.details.console_theme %>');
        $('#activeTable').DataTable();
        nodeList();
    }
</script>